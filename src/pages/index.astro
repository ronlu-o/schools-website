---
import Layout from '../layouts/Layout.astro';

const schools = [
  { name: "MIT", location: "Cambridge, MA", ranking: 1 },
  { name: "Stanford", location: "Stanford, CA", ranking: 2 },
  { name: "Harvard", location: "Cambridge, MA", ranking: 3 },
];
---

<Layout title="Top 50 Schools Directory">
	<main class="container mx-auto px-4 py-8">
		<header class="text-center mb-12">
			<h1 class="text-4xl font-bold text-gray-900 mb-4">Top 50 Schools Directory</h1>
			<p class="text-xl text-gray-600">Discover the world's leading educational institutions</p>
		</header>

		<section class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
			{schools.map((school) => (
				<div class="bg-white rounded-lg shadow-md hover:shadow-lg transition-shadow duration-300 p-6">
					<div class="flex items-center justify-between mb-3">
						<span class="bg-blue-100 text-blue-800 text-sm font-medium px-2.5 py-0.5 rounded">
							#{school.ranking}
						</span>
					</div>
					<h3 class="text-xl font-semibold text-gray-900 mb-2">{school.name}</h3>
					<p class="text-gray-600">{school.location}</p>
				</div>
			))}
		</section>
	</main>
</Layout>
